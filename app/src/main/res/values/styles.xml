<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CardViewStyle" parent="android:Widget.TextView">
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="TextTitleToolBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="RadioButtonTreeMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/tree_item_textcolor_selector</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/tree_item_selector</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

</resources>
