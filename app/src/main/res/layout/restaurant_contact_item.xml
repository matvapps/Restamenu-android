<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_restaurant_margin_start"
        android:layout_marginStart="@dimen/activity_restaurant_margin_start"
        android:layout_marginEnd="@dimen/activity_restaurant_margin_start"
        android:layout_marginRight="@dimen/activity_restaurant_margin_start"
        android:layout_marginBottom="@dimen/restaurant_contact_item_margin_vertical">


        <View
            android:id="@+id/contact_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/greyish"
            app:layout_constraintBottom_toBottomOf="parent" />


        <ImageView
            android:id="@+id/contact_icon"
            android:layout_width="@dimen/restaurant_contact_item_icon_size"
            android:layout_height="@dimen/restaurant_contact_item_icon_size"
            android:layout_alignBottom="@+id/contact_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/restaurant_contact_item_title_margin_start"
            android:layout_marginStart="@dimen/restaurant_contact_item_title_margin_start"
            android:layout_toEndOf="@+id/contact_icon"
            android:layout_toRightOf="@+id/contact_icon"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/restaurant_contact_item_title_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/contact_icon"
            app:layout_constraintStart_toEndOf="@+id/contact_icon"
            app:layout_constraintTop_toTopOf="@+id/contact_icon"
            tools:text="Opening Hours" />

        <TextView
            android:id="@+id/contact_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/contact_title"
            android:layout_alignStart="@+id/contact_title"
            android:layout_below="@+id/contact_title"
            android:layout_marginBottom="@dimen/restaurant_contact_item_content_margin_bottom"
            android:layout_marginTop="@dimen/restaurant_contact_item_content_margin_top"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:textSize="@dimen/restaurant_contact_item_title_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/contact_title"
            app:layout_constraintTop_toBottomOf="@+id/contact_icon"
            android:textColorLink="@color/cerulean"
            tools:text="+380933101525 \n+380950804273" />


    </android.support.constraint.ConstraintLayout>

</LinearLayout>