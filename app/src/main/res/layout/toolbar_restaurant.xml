<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    android:elevation="0dp"
    android:gravity="center"
    app:elevation="0dp"
    app:layout_collapseMode="pin"
    app:navigationIcon="@drawable/ic_burger_menu"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="0dp"
        android:gravity="center"
        app:elevation="0dp"
        app:layout_collapseMode="pin"
        app:navigationIcon="@drawable/ic_burger_menu"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


    </android.support.v7.widget.Toolbar>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/toolbar_main_logo_width"
                android:layout_height="@dimen/toolbar_main_logo_height"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/toolbar_main_logo_margin_horizontal"
                android:layout_marginStart="@dimen/toolbar_main_logo_margin_horizontal"
                android:src="@drawable/logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <android.support.constraint.ConstraintLayout
                android:id="@+id/settings_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/toolbar_category_settings_container_margin_end"
                android:layout_marginRight="@dimen/toolbar_category_settings_container_margin_end"
                android:background="@drawable/rect_fill_stroke_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/settings"
                    android:layout_width="@dimen/toolbar_category_currency_icon_size"
                    android:layout_height="@dimen/toolbar_category_currency_icon_size"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginStart="@dimen/toolbar_category_currency_icon_margin_start"
                    android:layout_marginLeft="@dimen/toolbar_category_currency_icon_margin_start"
                    android:src="@drawable/ic_settings"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/currency_title"
                    app:layout_constraintEnd_toStartOf="@+id/currency_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/currency_title" />

                <TextView
                    android:id="@+id/currency_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/toolbar_category_currency_title_margin_bottom"
                    android:layout_marginEnd="@dimen/toolbar_category_currency_title_margin_end"
                    android:layout_marginRight="@dimen/toolbar_category_currency_title_margin_end"
                    android:layout_marginStart="@dimen/toolbar_category_currency_title_margin_start"
                    android:layout_marginLeft="@dimen/toolbar_category_currency_title_margin_start"
                    android:layout_marginTop="@dimen/toolbar_category_currency_title_margin_top"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textSize="@dimen/toolbar_category_currency_title_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/image_icon_place"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Setting" />

            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

</RelativeLayout>
