<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/restaurant_advertising_card_margin"
        android:layout_marginEnd="@dimen/restaurant_advertising_card_margin"
        android:layout_marginStart="@dimen/restaurant_advertising_card_margin"
        android:background="?selectableItemBackground"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="@dimen/restaurant_advertising_card_radius"
        app:cardElevation="@dimen/restaurant_advertising_card_elevation">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/restaurant_background"
                android:layout_width="0dp"
                android:layout_height="@dimen/restaurant_advertising_card_background_height"
                android:background="@color/white_two"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/restaurant_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/restaurant_advertising_card_title_margin_end"
                android:layout_marginStart="@dimen/restaurant_advertising_card_title_margin_start"
                android:layout_marginTop="@dimen/restaurant_advertising_card_title_margin_top"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans_bold"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/restaurant_advertising_card_title_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_background"
                tools:text="Restaurant Bamboo Lagoon is waiting for you every evening!" />

            <TextView
                android:id="@+id/restaurant_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/restaurant_advertising_card_type_margin_end"
                android:layout_marginTop="@dimen/restaurant_advertising_card_type_margin_top"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans_semibold"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/restaurant_advertising_card_type_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/restaurant_title"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_title"
                tools:text="Order a table in advance to enjoy the performance of the artist performing your favorite hits." />


            <ImageView
                android:id="@+id/food_type_restaurant_img"
                android:layout_width="@dimen/restaurant_advertising_card_service_rest_img_width"
                android:layout_height="@dimen/restaurant_advertising_card_service_rest_img_heighy"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/restaurant_advertising_card_service_rest_img_margin_bottom"
                android:layout_marginTop="@dimen/restaurant_advertising_card_service_rest_img_margin_top"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_restoran_noactive"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/restaurant_type"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_type" />

            <ImageView
                android:id="@+id/food_type_takeaway_img"
                android:layout_width="@dimen/restaurant_advertising_card_service_takeaway_img_width"
                android:layout_height="@dimen/restaurant_advertising_card_service_takeaway_img_height"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/restaurant_advertising_card_service_takeaway_img_margin_start"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_food_noactive"
                app:layout_constraintBottom_toBottomOf="@+id/food_type_restaurant_img"
                app:layout_constraintStart_toEndOf="@+id/food_type_restaurant_img"
                app:layout_constraintTop_toTopOf="@+id/food_type_restaurant_img" />

            <ImageView
                android:id="@+id/food_type_delivery_img"
                android:layout_width="@dimen/restaurant_advertising_card_service_delivery_img_width"
                android:layout_height="@dimen/restaurant_advertising_card_service_delivery_img_height"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/restaurant_advertising_card_service_delivery_img_margin_start"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_delivery_noactive"
                app:layout_constraintBottom_toBottomOf="@+id/food_type_takeaway_img"
                app:layout_constraintStart_toEndOf="@+id/food_type_takeaway_img"
                app:layout_constraintTop_toTopOf="@+id/food_type_takeaway_img" />


            <TextView
                android:id="@+id/as_advertising_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/restaurant_advertising_card_advert_text_margin_bottom"
                android:layout_marginEnd="@dimen/restaurant_advertising_card_advert_text_margin_end"
                android:layout_marginTop="@dimen/restaurant_advertising_card_advert_text_margin_top"
                android:fontFamily="@font/open_sans"
                android:gravity="end"
                android:text="as advertising"
                android:textColor="#999999"
                android:textSize="@dimen/restaurant_advertising_card_advert_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_type" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>