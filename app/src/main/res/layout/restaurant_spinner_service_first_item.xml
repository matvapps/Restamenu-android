<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spinner_service_first_item_height"
    android:background="@color/golden"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/restaurant_service_image"
            android:layout_width="@dimen/spinner_service_image_size"
            android:layout_height="@dimen/spinner_service_image_size"
            android:layout_marginStart="@dimen/spinner_service_image_margin_start"
            android:src="@drawable/ic_food_act" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spinner_service_title_margin_start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restaurant_service_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="At restaurant"
                android:textColor="@color/white"
                android:textSize="@dimen/spinner_service_title_text_size" />

            <TextView
                android:id="@+id/order_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="order type"
                android:textColor="@color/white"
                android:textSize="@dimen/spinner_service_order_type_text_size"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/spinner_service_arrow_down_size"
        android:layout_height="@dimen/spinner_service_arrow_down_size"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/ic_arrow_white"
        android:layout_marginEnd="@dimen/spinner_service_arrow_down_margin_end" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:alpha="0.1"
        android:background="@color/black" />


</FrameLayout>