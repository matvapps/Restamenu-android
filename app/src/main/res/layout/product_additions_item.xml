<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/addition_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13.75dp"
        android:layout_marginLeft="17.5dp"
        android:layout_marginTop="17.75dp"
        android:background="#FCFCFC"
        android:fontFamily="@font/open_sans"
        android:includeFontPadding="false"
        android:text="Portion of mayonnaise hello"
        android:textColor="@color/black"
        android:textSize="13.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/addition_mass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10.5dp"
        android:layout_marginStart="10.5dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/open_sans"
        android:text="50 G"
        android:textColor="#666666"
        android:textSize="10.25sp"
        app:layout_constraintBottom_toBottomOf="@+id/addition_name"
        app:layout_constraintEnd_toStartOf="@+id/additions_cost"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/addition_name"
        app:layout_constraintTop_toTopOf="@+id/addition_name" />


    <TextView
        android:id="@+id/additions_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21.5dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="$5"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/addition_use_switch"
        app:layout_constraintEnd_toStartOf="@+id/addition_use_switch"
        app:layout_constraintTop_toTopOf="@+id/addition_use_switch"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="21.5dp" />


    <android.support.v7.widget.SwitchCompat
        style="@style/SwitchCompatStyle"
        android:id="@+id/addition_use_switch"
        android:layout_width="41dp"
        android:layout_height="20dp"
        android:layout_marginEnd="17.5dp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:checked="true"
        android:layout_marginRight="17.5dp" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>