<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/order_type_item_height"
    android:background="@drawable/round_rect_stroke_grey"
    android:paddingBottom="11.5dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_food_noact" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/order_type_title_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/order_type_title_text_size"
        tools:text="At Restaurant" />

    <TextView
        android:id="@+id/is_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:drawablePadding="6dp"
        android:drawableRight="@drawable/ic_checkd"
        android:gravity="right"
        android:text="Selected"
        android:textColor="@color/white"
        android:textSize="@dimen/order_type_selected_text_size"
        android:visibility="gone" />

</RelativeLayout>