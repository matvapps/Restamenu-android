<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/currency_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/currency_icon_margin_left"
        android:layout_marginStart="@dimen/currency_icon_margin_left"
        android:layout_marginTop="@dimen/currency_icon_margin_top"
        android:text="$"
        android:textColor="@color/black"
        android:textSize="@dimen/currency_icon_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/currency_name_margin_start"
        android:layout_marginStart="@dimen/currency_name_margin_start"
        android:fontFamily="@font/open_sans"
        android:text="Dollar"
        android:textColor="@color/cerulean"
        android:textSize="@dimen/currency_name_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/currency_icon"
        app:layout_constraintStart_toEndOf="@+id/currency_icon"
        app:layout_constraintTop_toTopOf="@+id/currency_icon" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="@dimen/currency_divider_margin_top"
        android:background="#F1F2F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currency_icon" />

</android.support.constraint.ConstraintLayout>