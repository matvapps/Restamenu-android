<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dish_category_item_margin_bottom">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/category_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dish_category_item_background_height"
        android:scaleType="centerCrop"
        android:src="@drawable/restaurants"
        app:riv_corner_radius="@dimen/dish_category_item_background_radius" />

    <TextView
        android:id="@+id/category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="@dimen/dish_category_name_margin"
        android:layout_marginStart="@dimen/dish_category_name_margin"
        android:text="Appetizers"
        android:textColor="@color/white"
        android:textSize="@dimen/dish_category_name_text_size" />

</FrameLayout>