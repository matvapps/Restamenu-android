<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/search_spinner_item_margin_vertical"
        android:layout_marginStart="@dimen/search_spinner_item_margin_start"
        android:layout_marginTop="@dimen/search_spinner_item_margin_vertical"
        android:gravity="center_horizontal"
        android:text="Filter"
        android:textColor="@color/dusty_red"
        android:textSize="@dimen/search_spinner_item_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/search_spinner_item_arrow_width"
        android:layout_height="@dimen/search_spinner_item_arrow_height"
        android:layout_marginBottom="@dimen/search_spinner_item_arrow_margin_vertical"
        android:layout_marginStart="@dimen/search_spinner_item_arrow_margin_start"
        android:layout_marginTop="@dimen/search_spinner_item_arrow_margin_vertical"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>