<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spinner_service_first_item_height"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.1"
        android:background="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="@dimen/spinner_service_image_container"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/order_type_not_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:textColor="@color/warm_grey_66"
                android:text="Not available"
                android:textSize="@dimen/spinner_service_not_available_text_size"/>


            <ImageView
                android:id="@+id/order_type_image"
                android:layout_width="@dimen/spinner_service_image_size"
                android:layout_height="@dimen/spinner_service_image_size"
                android:layout_marginStart="@dimen/spinner_service_image_margin_start"
                android:src="@drawable/ic_food_noact" />

        </FrameLayout>

        <TextView
            android:id="@+id/order_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="At restaurant"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </LinearLayout>

</LinearLayout>