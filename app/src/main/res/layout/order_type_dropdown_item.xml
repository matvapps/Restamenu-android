<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/order_type_header_item_height"
    android:orientation="vertical">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.1"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/order_type_not_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/order_type_dropdown_item_notavailable_margin_start"
        android:layout_marginLeft="@dimen/order_type_dropdown_item_notavailable_margin_start"
        android:fontFamily="@font/open_sans"
        android:text="Not available"
        android:textColor="@color/warm_grey_66"
        android:visibility="invisible"
        android:textSize="@dimen/order_type_dropdown_item_notavailable_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/order_type_image"
        android:layout_width="@dimen/order_type_header_item_image_width"
        android:layout_height="@dimen/order_type_header_item_image_height"
        android:layout_marginStart="@dimen/order_type_header_item_image_margin_start"
        android:layout_marginLeft="@dimen/order_type_header_item_image_margin_start"
        android:layout_gravity="center"
        android:src="@drawable/ic_food_noact"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/order_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/order_type_dropdown_item_title_margin_start"
        android:layout_marginLeft="@dimen/order_type_dropdown_item_title_margin_start"
        android:fontFamily="@font/open_sans_semibold"
        tools:text="At restaurant"
        android:textColor="@color/black"
        android:textSize="@dimen/order_type_dropdown_item_title_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/order_type_image"
        app:layout_constraintStart_toEndOf="@+id/order_type_image"
        app:layout_constraintTop_toTopOf="@+id/order_type_image" />


</android.support.constraint.ConstraintLayout>