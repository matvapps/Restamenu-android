<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/test_rose"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/restaurant_header_margin">

        <LinearLayout
            android:id="@+id/restaurant_favourite_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/restaurant_header_margin">

            <ImageView
                android:id="@+id/favourite_icon_image"
                android:layout_width="@dimen/restaurant_header_favorite_icon_size"
                android:layout_height="@dimen/restaurant_header_favorite_icon_size"
                android:layout_marginEnd="@dimen/restaurant_header_favorite_icon_margin"
                android:src="@drawable/ic_favorite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In favorite"
                android:textSize="@dimen/restaurant_header_favorite_text_size"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/restaurant_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Serafina Dubai"
            android:textColor="@color/white"
            android:textSize="@dimen/restaurant_header_title_text_size"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/restaurant_header_title_margin_top"
            android:layout_marginStart="@dimen/restaurant_header_margin"/>

        <TextView
            android:id="@+id/restaurant_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Restaurant"
            android:textColor="@color/white"
            android:textSize="@dimen/restaurant_header_type_text_size"
            android:layout_marginBottom="@dimen/restaurant_header_type_margin_bottom"
            android:layout_marginStart="@dimen/restaurant_header_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/restaurant_header_margin_top"
            android:layout_marginStart="@dimen/restaurant_header_margin">

            <ImageView
                android:layout_width="@dimen/restaurant_header_icon_size"
                android:layout_height="@dimen/restaurant_header_icon_size"
                android:layout_marginEnd="@dimen/restaurant_header_icon_margin"
                android:src="@drawable/ic_pin" />

            <TextView
                android:id="@+id/restaurant_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="52nd Level Dubai Marriott Harbour"
                android:textColor="@color/white"
                android:textSize="@dimen/restaurant_header_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/restaurant_header_margin_top"
            android:layout_marginStart="@dimen/restaurant_header_margin">

            <ImageView
                android:layout_width="@dimen/restaurant_header_icon_size"
                android:layout_height="@dimen/restaurant_header_icon_size"
                android:layout_marginEnd="@dimen/restaurant_header_icon_margin"
                android:src="@drawable/ic_call" />

            <TextView
                android:id="@+id/restaurant_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="8 800 640 00 10"
                android:textColor="@color/white"
                android:textSize="@dimen/restaurant_header_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/restaurant_header_margin_top"
            android:layout_marginStart="@dimen/restaurant_header_margin">

            <ImageView
                android:layout_width="@dimen/restaurant_header_icon_size"
                android:layout_height="@dimen/restaurant_header_icon_size"
                android:layout_marginEnd="@dimen/restaurant_header_icon_margin"
                android:src="@drawable/ic_time" />

            <TextView
                android:id="@+id/restaurant_opening_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Mon - Fri 12:00 - 24:00"
                android:textColor="@color/white"
                android:textSize="@dimen/restaurant_header_text_size" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/gallery_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="@dimen/restaurant_header_gallery_margin_top"/>

    </LinearLayout>

</FrameLayout>