<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="@dimen/card_restaurant_width"
        android:layout_height="@dimen/card_restaurant_height"
        app:cardCornerRadius="@dimen/card_restaurant_radius">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/restaurant_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/restaurant_image_height"
                android:background="@color/white_two"
                android:scaleType="centerCrop"
                android:src="@drawable/rest_background_test" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/restaurant_data_container_height"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/restaurant_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="244sp"
                    android:text="Indego by Vineet"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/restaurant_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:lineSpacingExtra="32sp"
                    android:text="Restaurant"
                    android:textColor="@color/black"
                    android:textSize="12sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/food_type_restaurant_img"
                        android:layout_width="14dp"
                        android:layout_height="14.6dp"
                        android:layout_gravity="bottom"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_drink_noactive" />

                    <ImageView
                        android:id="@+id/food_type_takeaway_img"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="bottom"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_eat_noactive" />

                    <ImageView
                        android:id="@+id/food_type_delivery_img"
                        android:layout_width="20dp"
                        android:layout_height="14dp"
                        android:layout_gravity="bottom"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_deliver_noactive" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_pin_1" />

                    <TextView
                        android:id="@+id/restaurant_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:lineSpacingExtra="34sp"
                        android:text="Grosvenor House Dubai"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/distance_to_restaurant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:lineSpacingExtra="34sp"
                        android:text="150 m"
                        android:textColor="@color/brownish_grey"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>
