<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="@dimen/dish_category_item_margin_bottom"
    android:layout_marginBottom="@dimen/dish_category_item_margin_bottom">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/category_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dish_category_item_background_height"
        android:scaleType="centerCrop"
        android:src="@drawable/restaurants"
        app:riv_corner_radius="@dimen/dish_category_item_background_radius" />

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dish_category_name_margin"
        tools:text="Appetizers"
        android:textColor="@color/black"
        android:textSize="@dimen/dish_category_name_text_size" />

</LinearLayout>