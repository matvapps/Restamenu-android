<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f7"
        tools:context="com.restamenu.restaurant.RestaurantActivity">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/restaurant_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/restaurant_header_height"
                android:background="@android:color/darker_gray"
                android:focusableInTouchMode="true"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!--<Spinner-->
            <!--android:id="@+id/order_type_spinner"-->
            <!--android:layout_width="match_parent"-->
            <!--style="@style/Widget.AppCompat.Spinner"-->
            <!--android:spinnerMode="dropdown"-->
            <!--android:drawSelectorOnTop="true"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:layout_height="70dp"/>-->

            <TextView
                android:id="@+id/restaurant_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:textColor="@color/white"
                android:textSize="@dimen/restaurant_header_title_text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/restaurant_image"
                app:layout_constraintTop_toTopOf="@+id/restaurant_image"
                tools:text="Serafina Dubai" />

            <TextView
                android:id="@+id/restaurant_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/restaurant_header_type_text_size"
                app:layout_constraintStart_toStartOf="@+id/restaurant_title"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_title"
                tools:text="Restaurant" />


            <LinearLayout
                android:id="@+id/restaurant_favourite_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/favourite_icon_image"
                    android:layout_width="@dimen/restaurant_header_favorite_icon_size"
                    android:layout_height="@dimen/restaurant_header_favorite_icon_size"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_fav_noact" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to favorite"
                    android:textColor="@color/black"
                    android:textSize="@dimen/restaurant_header_favorite_text_size" />


            </LinearLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/restaurant_image"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_background">


                <!--<RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="start"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <include
                        layout="@layout/order_type_item"
                        android:layout_width="@dimen/order_type_item_width"
                        android:layout_height="@dimen/order_type_item_height"
                        android:layout_marginEnd="16dp" />

                    <include
                        layout="@layout/order_type_item"
                        android:layout_width="@dimen/order_type_item_width"
                        android:layout_height="@dimen/order_type_item_height"
                        android:layout_marginEnd="16dp" />

                    <include
                        layout="@layout/order_type_item"
                        android:layout_width="@dimen/order_type_item_width"
                        android:layout_height="@dimen/order_type_item_height"
                        android:layout_marginEnd="16dp" />

                </RadioGroup>-->

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                app:layout_constraintStart_toEndOf="@+id/restaurant_image"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_type">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/restaurant_header_data_image_size"
                    android:layout_height="@dimen/restaurant_header_data_image_size"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_pin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/restaurant_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/restaurant_header_data_text_size"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/imageView"
                    tools:text="52nd Level Dubai Marriott Harbour 52nd Level Dubai" />


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/restaurant_header_data_image_size"
                    android:layout_height="@dimen/restaurant_header_data_image_size"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_call"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:id="@+id/restaurant_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/restaurant_header_data_text_size"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="@+id/imageView4"
                    tools:text="8 800 640 00 10" />


                <LinearLayout
                    android:id="@+id/timing_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_rectangle_gold"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4">

                    <ImageView
                        android:layout_width="@dimen/restaurant_header_data_image_size"
                        android:layout_height="@dimen/restaurant_header_data_image_size"
                        android:src="@drawable/ic_time" />

                    <TextView
                        android:id="@+id/restaurant_opening_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/restaurant_header_data_text_size"
                        tools:text="24 hours" />

                </LinearLayout>


            </android.support.constraint.ConstraintLayout>

            <ImageView
                android:id="@+id/restaurant_image"
                android:layout_width="@dimen/activity_restaurant_image_width"
                android:layout_height="@dimen/activity_restaurant_image_height"
                android:layout_marginStart="32dp"
                android:layout_marginTop="@dimen/activity_restaurant_image_margin_top"
                android:scaleType="centerCrop"
                android:src="@drawable/restaurants"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!--<ImageView-->
                <!--android:id="@+id/map"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="266dp"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:visibility="visible"-->
                <!--app:layout_constraintEnd_toEndOf="parent"-->
                <!--app:layout_constraintHorizontal_bias="0.0"-->
                <!--app:layout_constraintStart_toStartOf="parent"-->
                <!--app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />-->

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>