<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/nearby_restaurant_card_margin_right"
    android:layout_marginRight="@dimen/nearby_restaurant_card_margin_right">


    <android.support.v7.widget.CardView
        android:layout_width="@dimen/nearby_restaurant_card_width"
        android:layout_height="@dimen/nearby_restaurant_card_height"
        app:cardCornerRadius="@dimen/nearby_restaurant_card_radius"
        app:cardElevation="@dimen/nearby_restaurant_card_elevation">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/restaurant_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nearby_restaurant_image_height"
                android:background="@color/white_two"
                android:scaleType="centerCrop" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/nearby_restaurant_data_container_height"
                android:orientation="vertical"
                android:paddingLeft="@dimen/nearby_restaurant_data_container_padding"
                android:paddingRight="@dimen/nearby_restaurant_data_container_padding">

                <TextView
                    android:id="@+id/restaurant_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/nearby_restaurant_title_text_margin_left"
                    android:layout_marginStart="@dimen/nearby_restaurant_title_text_margin_left"
                    android:layout_marginTop="@dimen/nearby_restaurant_title_text_margin_top"
                    android:text="Indego by Vineet"
                    android:textColor="@color/black"
                    android:textSize="@dimen/nearby_restaurant_title_text_size" />

                <TextView
                    android:id="@+id/restaurant_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/nearby_restaurant_type_text_margin_top"
                    android:text="Restaurant"
                    android:textColor="@color/black"
                    android:textSize="@dimen/nearby_restaurant_type_text_size" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/nearby_restaurant_cuisine_type_container_margin_top"
                    android:layout_marginBottom="@dimen/nearby_restaurant_cuisine_type_container_margin_bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/food_type_restaurant_img"
                        android:layout_width="@dimen/nearby_restaurant_cuisine_type_img_size"
                        android:layout_height="@dimen/nearby_restaurant_cuisine_type_img_size"
                        android:layout_gravity="bottom"
                        android:layout_marginEnd="@dimen/nearby_restaurant_cuisine_type_image_margin"
                        android:layout_marginRight="@dimen/nearby_restaurant_cuisine_type_image_margin"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_restoran_active" />

                    <ImageView
                        android:id="@+id/food_type_takeaway_img"
                        android:layout_width="@dimen/nearby_restaurant_cuisine_type_img_size"
                        android:layout_height="@dimen/nearby_restaurant_cuisine_type_takeway_image_height"
                        android:layout_gravity="bottom"
                        android:layout_marginEnd="@dimen/nearby_restaurant_cuisine_type_image_margin"
                        android:layout_marginRight="@dimen/nearby_restaurant_cuisine_type_image_margin"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_food_active" />

                    <ImageView
                        android:id="@+id/food_type_delivery_img"
                        android:layout_width="@dimen/nearby_restaurant_cuisine_type_delivery_width"
                        android:layout_height="@dimen/nearby_restaurant_cuisine_type_img_size"
                        android:layout_gravity="bottom"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_delivery_active" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/nearby_restaurant_cuisine_type_img_size"
                        android:layout_height="@dimen/nearby_restaurant_cuisine_type_img_size"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_pin_1" />

                    <TextView
                        android:id="@+id/restaurant_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Grosvenor House Dubai"
                        android:textColor="@color/black"
                        android:textSize="@dimen/nearby_restaurant_street_text_size" />

                    <TextView
                        android:id="@+id/distance_to_restaurant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="150 m"
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/nearby_restaurant_distance_text_size" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>