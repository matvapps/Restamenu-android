<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/land_scroll_it_width"
    android:layout_height="@dimen/land_scroll_it_height">

    <ImageView
        android:id="@+id/scroll_it_image"
        android:layout_width="@dimen/land_scroll_it_image_size"
        android:layout_height="@dimen/land_scroll_it_image_size"
        android:layout_marginEnd="@dimen/land_scroll_it_image_margin_end"
        android:src="@drawable/ic_scroll_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scroll_it_text"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/land_scroll_it_image_margin_end" />

    <TextView
        android:id="@+id/scroll_it_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/land_scroll_it_text_margin_end"
        android:fontFamily="@font/open_sans"
        android:text="@string/scroll_it_text"
        android:textColor="#999999"
        android:textSize="@dimen/land_scroll_it_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/scroll_it_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scroll_it_image"
        android:layout_marginRight="@dimen/land_scroll_it_text_margin_end" />


</android.support.constraint.ConstraintLayout>