<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="@dimen/restaurant_item_card_width"
        android:layout_height="@dimen/restaurant_item_card_height"
        app:cardCornerRadius="@dimen/restaurant_item_card_radius"
        app:cardElevation="2dp"
        android:layout_marginBottom="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/restaurant_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/restaurant_item_card_image_height"
                android:background="@color/white_two"
                android:scaleType="centerCrop" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/restaurant_item_card_data_container_height"
                android:orientation="vertical"
                android:paddingLeft="21.5dp"
                android:paddingRight="21.5dp">

                <TextView
                    android:id="@+id/restaurant_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:lineSpacingExtra="177.9sp"
                    android:text="Indego by Vineet"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/restaurant_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7.5dp"
                    android:lineSpacingExtra="24.9sp"
                    android:text="Restaurant"
                    android:textColor="@color/black"
                    android:textSize="9sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12.5dp"
                    android:layout_marginBottom="9dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/food_type_restaurant_img"
                        android:layout_width="12.5dp"
                        android:layout_height="12.5dp"
                        android:layout_gravity="bottom"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_drink_noactive" />

                    <ImageView
                        android:id="@+id/food_type_takeaway_img"
                        android:layout_width="13dp"
                        android:layout_height="15dp"
                        android:layout_gravity="bottom"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_eat_noactive" />

                    <ImageView
                        android:id="@+id/food_type_delivery_img"
                        android:layout_width="18.5dp"
                        android:layout_height="12.5dp"
                        android:layout_gravity="bottom"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_deliver_noactive" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>