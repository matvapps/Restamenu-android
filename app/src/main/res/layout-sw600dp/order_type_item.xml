<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_type_view"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal"
    android:paddingBottom="0dp">

    <com.restamenu.views.custom.ServiceButton
        android:id="@+id/button_at_restaurant"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:service_icon="@drawable/ic_restaur"
        app:service_title="@string/service_restaurant"/>

    <Space
        android:layout_width="16dp"
        android:layout_height="0dp" />

    <com.restamenu.views.custom.ServiceButton
        android:id="@+id/button_takeaway"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:service_icon="@drawable/ic_take"
        app:service_title="@string/service_takeaway"/>

    <Space
        android:layout_width="16dp"
        android:layout_height="0dp" />

    <com.restamenu.views.custom.ServiceButton
        android:id="@+id/button_delivery"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="16dp"
        app:service_icon="@drawable/ic_delivery_noactive"
        app:service_title="@string/service_delivery" />


</LinearLayout>