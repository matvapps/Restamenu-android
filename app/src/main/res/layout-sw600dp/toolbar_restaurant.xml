<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    android:elevation="2dp"
    android:gravity="center"
    app:elevation="2dp"
    app:navigationIcon="@drawable/ic_burger_menu"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<ImageView-->
        <!--android:layout_width="20dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_gravity="start|center_vertical"-->
        <!--android:src="@drawable/ic_burger_menu"/>-->

        <LinearLayout
            android:id="@+id/logo_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginEnd="?attr/actionBarSize"
            android:layout_marginRight="?attr/actionBarSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

        </LinearLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/lang_container"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/rect_fill_stroke_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/country_flag"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_marginBottom="9dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginStart="19dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/flag_uk"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/language_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/language_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:text="ENG"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/arrow"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="7dp"
                android:layout_height="5dp"
                android:layout_marginEnd="7dp"
                android:rotation="90"
                android:src="@drawable/ic_arrow_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/currency_container"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/rect_fill_stroke_grey"
            app:layout_constraintBottom_toBottomOf="@+id/lang_container"
            app:layout_constraintEnd_toStartOf="@+id/lang_container"
            app:layout_constraintTop_toTopOf="@+id/lang_container">

            <TextView
                android:id="@+id/image_icon_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="9dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="$"
                android:textColor="@color/black"
                android:textSize="19.5sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/currency_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.47" />

            <TextView
                android:id="@+id/currency_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center_horizontal"
                android:text="USD"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/arrow2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.666" />

            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="7dp"
                android:layout_height="5dp"
                android:layout_marginEnd="7dp"
                android:rotation="90"
                android:src="@drawable/ic_arrow_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <!--<Spinner-->
        <!--android:layout_width="35dp"-->
        <!--android:layout_height="20dp" />-->

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.Toolbar>