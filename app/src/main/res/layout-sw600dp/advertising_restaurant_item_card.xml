<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/restaurant_item_padding">


    <android.support.v7.widget.CardView
        android:layout_width="@dimen/advertising_restaurant_item_width"
        android:layout_height="@dimen/restaurant_height"
        android:layout_marginBottom="@dimen/restaurant_elevation"
        app:cardCornerRadius="@dimen/restaurant_radius"
        app:cardElevation="@dimen/restaurant_elevation">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/restaurant_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/restaurant_image_height"
                android:background="@color/white_two"
                android:scaleType="centerCrop" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/restaurant_data_container_height"
                android:orientation="vertical"
                android:paddingLeft="@dimen/restaurant_data_container_padding"
                android:paddingRight="@dimen/restaurant_data_container_padding">

                <TextView
                    android:id="@+id/restaurant_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/restaurant_title_margin"
                    android:text="Restaurant Bamboo Lagoon
is waiting for you every evening!"
                    android:textColor="@color/black"
                    android:textSize="@dimen/restaurant_title_text_size" />

                <TextView
                    android:id="@+id/restaurant_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/restaurant_type_margin_top"
                    android:text="Order a table in advance to enjoy the performance of the artist performing your favorite hits."
                    android:textColor="@color/black"
                    android:textSize="@dimen/restaurant_type_text_size" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/restaurant_food_type_container_margin"
                    android:layout_marginBottom="@dimen/restaurant_title_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/food_type_restaurant_img"
                        android:layout_width="@dimen/restaurant_food_type_restaurant_img_size"
                        android:layout_height="@dimen/restaurant_food_type_restaurant_img_size"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/food_type_img_margin"
                        android:layout_marginRight="@dimen/food_type_img_margin"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_restoran_active" />

                    <ImageView
                        android:id="@+id/food_type_takeaway_img"
                        android:layout_width="@dimen/restaurant_food_type_takeway_width"
                        android:layout_height="@dimen/restaurant_food_type_takeway_height"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/food_type_img_margin"
                        android:layout_marginRight="@dimen/food_type_img_margin"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_food_active" />

                    <ImageView
                        android:id="@+id/food_type_delivery_img"
                        android:layout_width="@dimen/restaurant_food_type_delivery_width"
                        android:layout_height="@dimen/restaurant_food_type_delivery_height"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_delivery_active" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="end"
                        android:text="as advertising"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>